# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Supabase Configuration (for future use)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Demo Authentication (currently used)
VITE_DEMO_ADMIN_EMAIL=admin@telecom.demo
VITE_DEMO_ADMIN_PASSWORD=demo123

# PostgreSQL Configuration (currently used)
# These are used by the Express.js backend server
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telecom_device_management
DB_USER=postgres
DB_PASSWORD=111111

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api

# Application Configuration
VITE_APP_NAME=Telecom Device Management System
VITE_APP_VERSION=1.0.0

# Optional: Email Configuration (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
